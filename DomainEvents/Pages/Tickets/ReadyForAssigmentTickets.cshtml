@page
@model DomainEvents.Pages.Tickets.ReadyForAssigmentTicketsModel
@{
}



<form method="post">


    <table>
        <tr>
            <th>Konu</th>
            <th>Açıklama</th>
            <th>Açılış Tarihi</th>
        </tr>
        @for (int i = 0; i < Model.ReadyForAssignments.Count; i++)
        {


            <tr>
                <td>@Model.ReadyForAssignments[i].Subject</td>
                <td>@Model.ReadyForAssignments[i].Description</td>
                <td>@Model.ReadyForAssignments[i].LevelOfDifficulty</td>
                <td>@Model.ReadyForAssignments[i].LevelOfPriority</td>
                <td>

                    <input type="hidden" asp-for="Inputs[i].TicketId" value="@Model.ReadyForAssignments[i].TicketNumber" />
                    <select asp-for="Inputs[i].EmployeeId" asp-items="@Model.Employees"></select>
                </td>

            </tr>
        }

    </table>

    <input type="submit" value="Assing" asp-page-handler="Assign" />

</form>